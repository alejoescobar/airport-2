<h1>Listing Airlines</h1>
<p><%= link_to 'New Airline', new_airline_path %></p>

<table class="table">
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  <% @airlines.each do |airline| %>
    <tr>
      <td><%= airline.name %></td>
      <td><%= link_to 'Show', airline_path(airline) %></td>
      <td><%= link_to 'Edit', edit_airline_path(airline) %></td>
      <td><%= link_to 'Destroy', airline_path(airline),
              method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

